<%= render :partial => 'shared/close_alerts' %>

var buildForm = function(){
  var form_html = "<%= escape_javascript(render :partial => 'form')%>"
  var map_html = "<%= escape_javascript(render :partial => 'map')%>"
  $(this).html(form_html+map_html);
  $('.report input:text').clearingInput();
  $('.report textarea').clearingInput();
  $('#report_address').val(Kajoo.Location.getUserAddress());
};

$('#feature_content').slideUp(500, buildForm).slideDown(500);

$('#feature').scrollToMe();
