<%= render :partial => 'shared/close_alerts' %>

var buildForm = function(){
  var form_html = "<%= escape_javascript(render :partial => 'form')%>"
  var issue_html = "<%= escape_javascript(render :partial => 'suggestions_issue')%>"
  $(this).html(form_html+issue_html);
  $('.solution input:text').clearingInput();
  $('.solution textarea').clearingInput();
};

$('#feature_content').slideUp(500, buildForm).slideDown(500);

$('#feature').scrollToMe();
